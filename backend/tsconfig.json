  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "NodeNext",
    "outDir": "dist/",                                
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "setup/**/*.ts"],
  "exclude": ["node_modules"]
}
